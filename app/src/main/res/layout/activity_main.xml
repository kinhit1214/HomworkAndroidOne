<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_marginTop="5dp"
        android:text="Привет,меня зовут Мико,хочешь подружиться со мной?"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:text="                                             Подружиться"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="75dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textOn="Темная тема"
        android:text=""
        android:textOff="Светлая тема"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="200dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Введите сообщение" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Согласны ли Вы принять условия дружбы?"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="398dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="398dp"
        android:layout_height="123dp"
        android:text="Отправить"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="521dp" />

</LinearLayout>